<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".presentation.main.MainActivity">

    <GridLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <android.support.v7.widget.RecyclerView
            android:id="@+id/rv_movie_discovery"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_columnWeight="1" />

    </GridLayout>

    <!-- A progress bar that will be shown to users to indicate that favorites data is loading -->
    <ProgressBar
        android:id="@+id/pb_loading_indicator"
        android:layout_width="42dp"
        android:layout_height="42dp"
        android:layout_gravity="center"
        android:visibility="invisible" />

    <TextView
        android:id="@+id/tv_connection_error_message"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:gravity="center_horizontal"
        android:text="@string/movie_discovery_activity_connection_error_message"
        android:textSize="24sp"
        android:visibility="invisible"
        tools:android="@string/movie_discovery_activity_connection_error_message"/>

    <TextView
        android:id="@+id/tv_empty_favorites_list_message"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:gravity="center_horizontal"
        android:text="@string/movie_discovery_activity_empty_favorites_list_message"
        android:textSize="24sp"
        android:visibility="invisible"
        tools:android="@string/movie_discovery_activity_empty_favorites_list_message"/>

</FrameLayout>
